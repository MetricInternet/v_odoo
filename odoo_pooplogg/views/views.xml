<odoo>
  <data>
    <record id="payment_view" model="ir.ui.view">
        <field name="name">payment.view</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_bank_id']" position="after">
                <field name="truck_owner" />
            </xpath>
        </field>
    </record>
    <record id="customer_property" model="ir.ui.view">
        <field name="name">customer.property</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
             <xpath expr="//page[@name='internal_notes']" position="after">
                   <page name="properties" string="Properties" attrs="{'invisible':[('supplier_rank', '>', '0')]}">
                           <field name="properties" force_save="1">
                               <tree >
                                    <field name="property_name"/>
                                   <field name="property_id"/>
                                    <field name="address"/>
                                    <field name="zone_name"/>
                                    <field name="sewage_records"/>
                                </tree>
                       </field>
                   </page>
             </xpath>
            <xpath expr="//page[@name='internal_notes']" position="after">
                   <page name="wallet" string="Wallet Transactions" attrs="{'invisible':[('supplier_rank', '>', '0')]}">
                           <field name="transactions" force_save="1">
                               <tree >
                                    <field name="payment_id"/>
                                   <field name="date"/>
                                    <field name="type"/>
                                    <field name="amount"/>
                                </tree>
                       </field>
                   </page>
             </xpath>
            <xpath expr="//field[@name='category_id']" position="after">
                <field name="supplier_rank" invisible= "1"/>
                <field name="category"/>
                <field name="truck_id" attrs="{'invisible':[('supplier_rank', '>', '0')]}"/>
            </xpath>
        </field>
    </record>
        <record id="payment_method_view" model="ir.ui.view">
        <field name="name">payment.method</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.view_account_journal_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='currency_id']" position="after">
                <field name="payment_method" />
            </xpath>
        </field>
    </record>  
  </data>
</odoo>